<h1>Edit Landmark</h1>

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>Landmark Name: <input type="text" value="<%= @landmark.name %>" name="landmark[name]" id="name"></p>
  <p>Landmark Year Completed: <input type="text" value="<%= @landmark.year_completed %>" name="landmark[year_completed]" id="year_completed"></p>
  <p>Landmark Figure:
    <% Figure.all.each do |fig| %>
    <input type="checkbox" value="<%= fig.id %>" name="landmark[figure_id]" 'checked' if <% @landmark.figure_id == fig.id %>><%= fig.name %></input>
    <% end %>
  </p>

  <p>Or make a new figure</p>
  <input type="text" name="figure[name]" id="">


  <input type="submit" value="Edit Landmark" id="submit">
</form>
